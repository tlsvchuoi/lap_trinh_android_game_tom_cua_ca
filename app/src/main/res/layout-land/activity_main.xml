<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ban"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundframe" >

            <TextView
                android:id="@+id/tvTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/backgroundview"
                android:text="400" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/phinh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/xingau1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/hinhdongxingau" />

            <ImageView
                android:id="@+id/xingau2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/hinhdongxingau" />

            <ImageView
                android:id="@+id/xingau3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/hinhdongxingau" />

            <Button
                android:id="@+id/btnLacXiNgau"
                android:layout_width="100dp"
                android:layout_height="30dp"
             
                android:background="@drawable/buttonbatdau"
                android:onClick="LacXiNgau"
                android:text="@null" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/hinhamthanh"
            android:text="@null" />

        <TextView
            android:id="@+id/tvThoiGian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="00:03:00"
            android:textColor="#FFFFFF" />
    </FrameLayout>

    <GridView
        android:id="@+id/gvBanCo"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:numColumns="3"
        android:verticalSpacing="20dp" >
    </GridView>

</LinearLayout>